---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

export async function getStaticPaths({ paginate }) {
  const posts = await getCollection('posts');

  // 按日期倒序排列
  const sortedPosts = posts.sort((a, b) =>
    new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
  );

  // 每页 5 篇文章，从第 2 页开始生成（第 1 页由 index.astro 处理）
  const allPages = paginate(sortedPosts, { pageSize: 5 });

  // 过滤掉第一页，只保留 /blog/2, /blog/3 等
  return allPages.filter(page => page.params.page !== undefined);
}

const { page } = Astro.props;

// 获取当前页面路径用于来源追踪
const currentPath = `/blog/${page.currentPage}`;

// 格式化日期
function formatDate(date: Date): string {
  return date.toISOString().split('T')[0];
}
---

<Layout title={page.currentPage === 1 ? 'Rosydawn' : `Blog - Page ${page.currentPage} | Rosydawn`}>
  <main class="container">
    <Header currentPath="/" />

    <section class="posts">
      {page.data.map((post) => (
        <article class="post-item">
          <a href={`/blog/${post.id}?from=blog-list&ref=${currentPath}`}>
            <div class="post-main">
              <h2 class="post-title">{post.data.title}</h2>
              <p class="post-desc">{post.data.description}</p>
              <div class="post-meta">
                <time datetime={post.data.date.toISOString()}>
                  {formatDate(post.data.date)}
                </time>
                {post.data.tags && (
                  <div class="tags">
                    {post.data.tags.slice(0, 3).map((tag) => (
                      <span class="tag">#{tag}</span>
                    ))}
                  </div>
                )}
              </div>
            </div>
            <span class="arrow">→</span>
          </a>
        </article>
      ))}
    </section>

    {(page.url.prev || page.url.next) && (
      <nav class="pagination">
        <div class="pagination-info">
          <span>第 {page.currentPage} / {page.lastPage} 页</span>
          <span class="pagination-total">共 {page.total} 篇文章</span>
        </div>
        <div class="pagination-links">
          {page.url.prev ? (
            <a href={page.currentPage === 2 ? '/' : page.url.prev} class="pagination-link prev">
              <span class="arrow">←</span>
              <span>上一页</span>
            </a>
          ) : (
            <span class="pagination-link disabled">
              <span class="arrow">←</span>
              <span>上一页</span>
            </span>
          )}
          {page.url.next ? (
            <a href={page.url.next} class="pagination-link next">
              <span>下一页</span>
              <span class="arrow">→</span>
            </a>
          ) : (
            <span class="pagination-link disabled">
              <span>下一页</span>
              <span class="arrow">→</span>
            </span>
          )}
        </div>
      </nav>
    )}

    <Footer />
  </main>
</Layout>

<style>
  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  /* Posts */
  .posts {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .post-item {
    background: var(--bg);
    border-bottom: 1px solid var(--border);
  }

  .post-item:last-child {
    border-bottom: none;
  }

  .post-item a {
    display: flex;
    align-items: flex-start;
    gap: 1.5rem;
    padding: 1.5rem;
    text-decoration: none;
    color: inherit;
    transition: background 0.2s;
  }

  .post-item:hover {
    background: var(--bg-secondary);
  }

  .post-item:hover .arrow {
    transform: translateX(4px);
    color: var(--accent);
  }

  .post-item:hover .post-title {
    color: var(--accent);
  }

  .post-main {
    flex: 1;
  }

  .post-title {
    font-size: 1.25rem;
    font-weight: 500;
    color: var(--text);
    margin: 0 0 0.5rem 0;
    line-height: 1.4;
    transition: color 0.2s;
  }

  .post-desc {
    font-size: 0.9rem;
    color: var(--text-muted);
    margin: 0 0 0.75rem 0;
    line-height: 1.5;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    font-family: var(--font-mono);
    font-size: 0.8rem;
  }

  .post-meta time {
    color: var(--accent-dim);
  }

  .tags {
    display: flex;
    gap: 0.75rem;
  }

  .tag {
    color: var(--text-muted);
  }

  .arrow {
    font-size: 1.25rem;
    color: var(--text-dim);
    transition: transform 0.2s, color 0.2s;
    padding-top: 0.25rem;
  }

  /* Pagination */
  .pagination {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border);
  }

  .pagination-info {
    display: flex;
    justify-content: center;
    gap: 1rem;
    font-family: var(--font-mono);
    font-size: 0.85rem;
    color: var(--text-muted);
  }

  .pagination-total {
    color: var(--text-dim);
  }

  .pagination-links {
    display: flex;
    justify-content: center;
    gap: 1rem;
  }

  .pagination-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    font-family: var(--font-mono);
    font-size: 0.875rem;
    color: var(--text);
    text-decoration: none;
    border: 1px solid var(--border);
    border-radius: 6px;
    transition: all 0.2s;
  }

  .pagination-link:hover:not(.disabled) {
    border-color: var(--accent);
    color: var(--accent);
    background: var(--bg-secondary);
  }

  .pagination-link.disabled {
    color: var(--text-dim);
    cursor: not-allowed;
    opacity: 0.5;
  }

  .pagination-link .arrow {
    font-size: 1rem;
    padding: 0;
  }

  /* Responsive */
  @media (max-width: 640px) {
    .container {
      padding: 1rem;
    }

    .post-item a {
      gap: 1rem;
      padding: 1.25rem 1rem;
    }

    .post-title {
      font-size: 1.1rem;
    }

    .pagination-links {
      flex-direction: column;
      gap: 0.5rem;
    }

    .pagination-link {
      justify-content: center;
    }
  }
</style>
