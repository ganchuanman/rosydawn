---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="About | Rosydawn">
  <main class="container">
    <Header currentPath="/about" />

    <section class="about">
      <div class="about-content">
        <p>Nothing</p>
        <p><span class="label">技能</span> Android, Java, Kotlin, TypeScript</p>
      </div>

      <div class="about-links">
        <a href="https://github.com/ganchuanman/rosydawn" target="_blank" rel="noopener">GitHub</a>
      </div>
    </section>

    <Footer />
  </main>
</Layout>

<style>
  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  .about { flex: 1; }

  .about-content {
    font-size: 0.95rem;
    line-height: 2;
    color: var(--text);
  }

  .about-content p {
    margin: 0;
  }

  .label {
    color: var(--text-muted);
    margin-right: 0.5rem;
  }

  .about-links {
    margin-top: 2rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--border);
  }

  .about-links a {
    font-family: var(--font-mono);
    font-size: 0.9rem;
    color: var(--accent);
    text-decoration: none;
    transition: color 0.2s;
  }

  .about-links a:hover {
    text-decoration: underline;
  }

  @media (max-width: 640px) {
    .container { padding: 1rem; }
  }
</style>
