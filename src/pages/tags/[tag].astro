---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

// 获取所有文章
const allPosts = await getCollection('posts');

// 获取所有唯一标签
const allTags = [...new Set(allPosts.flatMap(post => post.data.tags || []))];

// 生成静态路径
export async function getStaticPaths() {
  const posts = await getCollection('posts');
  const tags = [...new Set(posts.flatMap(post => post.data.tags || []))];
  
  return tags.map(tag => ({
    params: { tag },
    props: {
      tag,
      posts: posts
        .filter(post => post.data.tags?.includes(tag))
        .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())
    }
  }));
}

const { tag, posts } = Astro.props;

function formatDate(date: Date): string {
  return date.toISOString().split('T')[0];
}
---

<Layout title={`#${tag} | Rosydawn`}>
  <main class="container">
    <header class="site-header">
      <div class="logo">
        <a href="/">
          <span class="prompt">$</span> rosydawn
          <span class="cursor">_</span>
        </a>
      </div>
      <nav class="nav">
        <a href="/">文章</a>
        <a href="/tags" class="active">分类</a>
        <a href="/about">关于</a>
      </nav>
    </header>

    <section class="page-intro">
      <a href="/tags" class="back-link" onclick="event.preventDefault(); history.back();">
        <span class="back-arrow">←</span>
        <span>返回</span>
      </a>
      <h1 class="page-title">#{tag}</h1>
      <p class="page-desc">{posts.length} 篇文章</p>
    </section>

    <section class="posts">
      {posts.map((post, index) => (
        <article class="post-item">
          <a href={`/blog/${post.id}`}>
            <div class="post-main">
              <h2 class="post-title">{post.data.title}</h2>
              <p class="post-desc">{post.data.description}</p>
              <div class="post-meta">
                <time datetime={post.data.date.toISOString()}>
                  {formatDate(post.data.date)}
                </time>
              </div>
            </div>
            <span class="arrow">→</span>
          </a>
        </article>
      ))}
    </section>

    <footer class="site-footer">
      <p>built with <a href="https://astro.build" target="_blank" rel="noopener">astro</a> · developed with llm</p>
    </footer>
  </main>
</Layout>

<style>
  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  /* Header */
  .site-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 0;
    margin-bottom: 3rem;
    border-bottom: 1px solid var(--border);
  }

  .logo a {
    font-family: var(--font-mono);
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text);
    text-decoration: none;
  }

  .prompt {
    color: var(--accent);
  }

  .cursor {
    color: var(--accent);
    animation: blink 1s step-end infinite;
  }

  @keyframes blink {
    50% { opacity: 0; }
  }

  .nav {
    display: flex;
    gap: 2rem;
    font-family: var(--font-mono);
    font-size: 0.9rem;
  }

  .nav a {
    color: var(--text-muted);
    text-decoration: none;
    transition: color 0.2s;
  }

  .nav a:hover,
  .nav a.active {
    color: var(--accent);
  }

  /* Page Intro */
  .page-intro {
    margin-bottom: 2.5rem;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-family: var(--font-mono);
    font-size: 0.85rem;
    color: var(--text-muted);
    text-decoration: none;
    margin-bottom: 1.5rem;
    transition: color 0.2s;
  }

  .back-link:hover {
    color: var(--accent);
    text-decoration: none;
  }

  .back-arrow {
    transition: transform 0.2s;
  }

  .back-link:hover .back-arrow {
    transform: translateX(-4px);
  }

  .page-title {
    font-family: var(--font-mono);
    font-size: 1.75rem;
    font-weight: 600;
    color: var(--accent);
    margin: 0 0 0.5rem 0;
  }

  .page-desc {
    font-family: var(--font-mono);
    font-size: 0.9rem;
    color: var(--text-muted);
    margin: 0;
  }

  /* Posts */
  .posts {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .post-item {
    background: var(--bg);
    border-bottom: 1px solid var(--border);
  }

  .post-item:last-child {
    border-bottom: none;
  }

  .post-item a {
    display: flex;
    align-items: flex-start;
    gap: 1.5rem;
    padding: 1.5rem;
    text-decoration: none;
    color: inherit;
    transition: background 0.2s;
  }

  .post-item:hover {
    background: var(--bg-secondary);
  }

  .post-item:hover .arrow {
    transform: translateX(4px);
    color: var(--accent);
  }

  .post-item:hover .post-title {
    color: var(--accent);
  }

  .post-index {
    font-family: var(--font-mono);
    font-size: 0.875rem;
    color: var(--text-dim);
    min-width: 2rem;
    padding-top: 0.25rem;
  }

  .post-main {
    flex: 1;
  }

  .post-title {
    font-size: 1.25rem;
    font-weight: 500;
    color: var(--text);
    margin: 0 0 0.5rem 0;
    line-height: 1.4;
    transition: color 0.2s;
  }

  .post-desc {
    font-size: 0.9rem;
    color: var(--text-muted);
    margin: 0 0 0.75rem 0;
    line-height: 1.5;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    font-family: var(--font-mono);
    font-size: 0.8rem;
  }

  .post-meta time {
    color: var(--accent-dim);
  }

  .arrow {
    font-size: 1.25rem;
    color: var(--text-dim);
    transition: transform 0.2s, color 0.2s;
    padding-top: 0.25rem;
  }

  /* Footer */
  .site-footer {
    margin-top: 2rem;
    padding: 2rem 0;
    border-top: 1px solid var(--border);
  }

  .site-footer p {
    font-family: var(--font-mono);
    font-size: 0.8rem;
    color: var(--text-muted);
    margin: 0;
  }

  /* Responsive */
  @media (max-width: 640px) {
    .container {
      padding: 1rem;
    }

    .site-header {
      flex-direction: column;
      gap: 1rem;
      align-items: flex-start;
    }

    .nav {
      gap: 1.5rem;
    }

    .post-item a {
      gap: 1rem;
      padding: 1.25rem 1rem;
    }

    .post-index {
      display: none;
    }

    .post-title {
      font-size: 1.1rem;
    }
  }
</style>
